@model Train

<h3>Train: @Model.Name (@Model.Number)</h3>
<p><strong>Next Stop:</strong> @Model.NextStop</p>
<p><strong>Delay:</strong> @(Model.DelayMinutes ?? 0) minutes</p>
<p><strong>Last Updated:</strong> @Model.LastUpdated.ToLocalTime()</p>

<h4>Incident History</h4>
@if (Model.Incidents.Any())
{
    <ul class="list-group">
        @foreach (var incident in Model.Incidents)
        {
            <li class="list-group-item">
                <strong>@incident.Username</strong>: @incident.Reason <br />
                <em>@incident.Comment</em> <br />
                <small>@incident.Timestamp.ToLocalTime()</small>
            </li>
        }
    </ul>
}
else
{
    <p>No incidents reported.</p>
}
