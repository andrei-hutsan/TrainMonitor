@model IEnumerable<Train>

<h2>Train Monitor</h2>

<div id="trainTable">
    @await Html.PartialAsync("_TrainTablePartial", Model)
</div>

<script>
    setInterval(() => {
        fetch('/Train/TrainTable')
            .then(r => r.text())
            .then(html => {
                document.getElementById('trainTable').innerHTML = html;
            });
    }, 10000); // refresh every 10s
</script>
